import java.util.Scanner; 
 
public class Mavenproject2 { 
 
    public static void main(String[] args) { 
 
        Scanner scanner = new Scanner(System.in); 
 
        System.out.println("Select the operation:"); 
        System.out.println("Press 1 for Addition"); 
        System.out.println("2 For Subtraction."); 
        System.out.println("3 for Multiplication."); 
        System.out.println("4 for Division."); 
 
        int choice = scanner.nextInt(); 
 
        System.out.println("Enter first number:"); 
        int n1 = scanner.nextInt(); 
 
        System.out.println("Enter second number:"); 
        int n2 = scanner.nextInt(); 
 
        switch (choice) { 
            case 1: 
            { 
                System.out.println("Addition Result Is: "+add(n1, n2)); 
                break; 
            } 
            case 2: 
            { 
                System.out.println("The Subtraction Result is: "+sub(n1, n2)); 
                break; 
            } 
            case 3: 
            { 
                System.out.println("Multiplication Result is: "+mul(n1, n2)); 
                break; 
            } 
            case 4: 
            { 
                if (n2==0) 
                { 
                    System.out.println("Division by zero is not possible."); 
                } else  
                { 
                    System.out.println("Division Result is: "+div(n1, n2)); 
                } 
                break; 
              } 
            default: 
                System.out.println("Incorrect Choice."); 
        } 
        scanner.close(); 
    } 
 
    static int add(int a, int b) 
     { 
        return a + b; 
    } 
 
    static int sub(int a, int b)  
    { 
        return a - b; 
    } 
 
    static int mul(int a, int b)  
    { 
        return a * b; 
    } 
 
    static int div(int a, int b) 
    { 
        return a / b;  
    } 
}
