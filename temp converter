import java.util.Scanner; 
 
public class Mavenproject2 { 
 
    public static void main(String[] args) { 
 
        Scanner loop = new Scanner(System.in); 
       double input=0; 
       double celcius=0; 
       double fahrenheit=0; 
       System.out.println("Enter 1 For Celcius to Fahrenheit And 2 For Fahrenheit to Celcius."); 
       input=loop.nextInt(); 
       if(input==1) 
       { 
           System.out.println("Enter The Value of Celcuis:"); 
           celcius=loop.nextInt(); 
           fahrenheit=(celcius*9.0/5.0)+32; 
                   System.out.println("The Value in Fahrenheit is "+fahrenheit); 
            
       } 
       if(input==2) 
       { 
           System.out.println("Enter The Value of Fahrenheit:"); 
           celcius=loop.nextInt(); 
           celcius=(fahrenheit-32.0)*5.0/9.0; 
                   System.out.println("The Value in Celcius is"+celcius); 
            
       } 
       loop.close(); 
    } 
}
